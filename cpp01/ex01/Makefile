CC = c++

CFLAGS = -Wall -Werror -Wextra -std=c++98

FRM = rm -rf

NAME = exec

SRC = main.cpp\
		Zombie.cpp\
		zombieHorde.cpp
		

all: $(NAME)

$(NAME): $(SRC) Zombie.hpp
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	$(FRM) $(NAME)

fclean: clean

re: fclean all
